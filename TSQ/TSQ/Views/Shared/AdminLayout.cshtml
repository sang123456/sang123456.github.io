<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TSQ-Admin</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/style.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/Chart.min.js"></script>
    <script src="~/tinymce/js/tinymce/tinymce.min.js"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>

    <script src="~/Scripts/plugins.js"></script>


</head>

<body>
    <div class="navbar navbar-inverse" id="header">
        <div class="container">
            <a class="btn-primary btn-sm" href=@Url.Action("Logout","Home") id="searchbtn" style="text-decoration:none;float:right;margin-top:10px;background:#292929;border:none;font-size:18px">Thoát</a>
            <img src="http://www.tsqresearch.com/images/logo.png" alt="Alternate Text" class="img-circle img-responsive" id="logo" style="margin:0 auto" />
            <a href="@Url.Action("Index","Admin")"><h2 style="text-align:center; color:white">TSQ Admin</h2></a> 
        </div>   
    </div>
    <div class="container body-content" style="padding:0;">
        <div class="side-bar col-md-3" style="padding:0;">
            <ul id="menu">
                <li>
                    <a href="@Url.Action("ListKH","KhachHang")" class="items">Cập Nhật Khách Hàng</a>
                </li>

                <li>
                    <a class="items" data-toggle="collapse" data-target="#QLKH">Quản Lý Kho Hàng</a>
                    <div class="collapse" id="QLKH">
                        <ul class="sub-menu">
                            <li><a href=@Url.Action("ListDH","Admin")>+ Cập Nhật Hàng Hóa</a></li>
                            <li><a href="@Url.Action("NhapSLSP","Admin")">+ Nhập Hàng</a></li>
                        </ul>
                    </div>
                </li>

                <li>
                    <a class="items"  data-toggle="collapse" data-target="#BH">Bán Hàng</a>
                    <div class="collapse" id="BH">
                        <ul class="sub-menu">
                            <li><a href="@Url.Action("ListHoaDon","Admin")">+ Thống Kê Đơn Hàng</a></li>
                            <li><a href="@Url.Action("GiaoHang","Admin")">+ Giao Hàng</a></li>
                            <li><a href="@Url.Action("ThongKe","Admin")">+ Thống Kê Doanh Thu</a></li>
                        </ul>
                    </div>
                </li>

                <li>
                    <a class="items" data-toggle="collapse" data-target="#ND">Dịch Vụ</a>
                    <div class="collapse" id="ND">
                        <ul class="sub-menu">
                            <li><a href="@Url.Action("NhaSanXuat","Admin")" >+ Nhà Sản Xuất</a></li>
                            <li><a href="@Url.Action("ThuongHieu","Admin")">+ Thương Hiệu</a></li>
                            <li><a href="@Url.Action("KhuyenMai","Admin")" >+ Khuyến Mãi</a></li>
                            <li><a href="@Url.Action("BaoHanh","Admin")" >+ Cơ Chế Bảo Hành</a></li>
                        </ul>
                    </div>
                </li>

                <li><a href="@Url.Action("LichSu","Admin")" class="items">Lịch Sử Xóa</a></li>
                <li><a href="@Url.Action("DoiPass","Admin")" class="items">Thông Tin Tài Khoản</a></li>
            </ul>
            <div class="widget" style="width:292.5px">
                <div class="datepicker">
                    <script src="https://lichngaytot.com/Scripts/jquery-ui.min.js"></script>
                    <script src="~/Scripts/widgetlichngay.js"></script>
                    <script type="text/javascript">document.write('<div class="tao-lich-left widgetlich-lvsicsoft" id="widgetlich-lvsicsoft" style="width:292.5px;" data-urlimagen="" data-colorbordern="#dddddd" data-coloramn="#7f7f7f" data-colorduongn="#000000"></div>');getWidgetLichNgay("widgetlich-lvsicsoft");</script>
                </div>
            </div>
        </div>
        @RenderBody()
        <div id="clear"></div>
        <hr />
        <div class="footer row">
            <div id="showroom" class="footer-content  col-sm-3">
                <p>SHOW ROOM</p>
                <br>
                <p>475A Điện Biên Phủ</p>
                <br>
                <p>HotLine: 01693439295</p>
                <div id="social">
                    <a href="https://www.facebook.com/groups/202551633651430" target="_blank"><img src="https://cdn4.iconfinder.com/data/icons/social-media-icons-the-circle-set/48/facebook_circle-512.png" height="30px"></a>
                    <a href="#"><img src="https://i.pinimg.com/originals/9d/2d/e1/9d2de1afa09cc026ff69eac19549732a.png" height="30px"></a>
                    <a href="#"><img src="https://cdn0.iconfinder.com/data/icons/social-circle/512/google-256.png" height="30px"></a>
                </div>
            </div>
            <div id="huongdan" class="footer-content col-sm-3">
                <p>HƯỚNG DẪN</p>
                <br>
                <a href="#">Câu hỏi thường gặp</a>
                <br>
                <a href="#">Hướng dẫn và điệu kiện sử dụng</a>
            </div>
            <div id="taikhoan" class="footer-content col-sm-3">
                <p>TÀI KHOẢN</p>
                <a href="#" onclick="ShowLogin()">Đăng nhập</a>
                <br>
                <a href="#">Đăng ký</a>
                <br>
                <a href="#">Chính Sách Bảo Mật</a>

            </div>
            <div id="lienket" class="footer-content col-sm-3">
                <P>LIÊN KẾT</P>
                <a href="#">G-shock.com.vn</a>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
