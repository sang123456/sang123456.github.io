@model TSQ.Models.THUONGHIEU

@{
    ViewBag.Title = "ThemTH";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<h2 style="color:#fff;text-align:center">Thêm Dồng Hồ</h2>

@using (Html.BeginForm("ThemtH", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-9" style="color:#fff">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên Thương Hiệu:</label>
            <div class="col-md-10">

                <input type="text" name="TenTH" /> <span style="color:red ">@ViewBag.ThongBaoLoi</span>

                @Html.ValidationMessageFor(model => model.TenTH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ảnh Trang Bìa </label>
            <div class="col-md-10">
                <input type="text" name="imgContend" value=""  /> Quăng cái link ảnh google vào đây!!!
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Hình Ảnh: </label>
            <div class="col-md-10">
                <input type="file" name="fileupload" />
                @*Thong Bao Trung*@
                <span style="color:red">@ViewBag.ThongBao</span>
            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm " class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Về trang quản lý Thương Hiệu", "ThuongHieu")
</div>

